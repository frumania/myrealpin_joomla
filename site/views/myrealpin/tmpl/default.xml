<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_MYREALPIN_VIEW_DEFAULT_TITLE" option="COM_MYREALPIN_VIEW_DEFAULT_OPTION">
		<help
			key="JHELP_MENUS_MENU_ITEM_MYREALPIN"
		/>
		<message>
			<![CDATA[COM_MYREALPIN_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

	<!-- Add fields to the parameters object for the layout. -->
		<fields name="params">
		<fieldset name="request" label="COM_MENUS_BASIC_FIELDSET_LABEL">

			<field 
				name="url" 
				type="text"
				label="COM_MYREALPIN_FIELD_URL_LABEL"
				description="COM_MYREALPIN_FIELD_URL_DESC"
				size="50"
				required="true"
				default="https://myrealpin.com"
			/>
		</fieldset>

		<!-- Add fields to the parameters object for the layout. -->

		<!-- Scroll. -->
		<fieldset name="basic" label="COM_MYREALPIN_FIELD_LABEL_SCROLLBARSPARAMS">

			<field 
				name="scrolling" 
				type="list"
				label="COM_MYREALPIN_FIELD_SCROLLBARS_LABEL"
				description="COM_MYREALPIN_FIELD_SCROLLBARS_DESC"
				default="no"
				>
				<option value="no">JNO</option>
				<option value="yes">JYES</option>
				<option value="auto">COM_MYREALPIN_FIELD_VALUE_AUTO</option>
			</field>

			<field 
				name="width" 
				type="text"
				label="JGLOBAL_WIDTH"
				description="COM_MYREALPIN_FIELD_WIDTH_DESC"
				default="100%"
				size="5"
			/>

			<field 
				name="height" 
				type="number"
				label="COM_MYREALPIN_FIELD_HEIGHT_LABEL"
				description="COM_MYREALPIN_FIELD_HEIGHT_DESC"
				default="1000"
				size="5"
			/>

		</fieldset>

		<!-- Advanced options. -->
		<fieldset name="advanced">

			<field 
				name="height_auto" 
				type="radio"
				label="COM_MYREALPIN_FIELD_HEIGHTAUTO_LABEL"
				description="COM_MYREALPIN_FIELD_HEIGHTAUTO_DESC"
				default="1"
				class="btn-group btn-group-yesno"
				>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field 
				name="show_header"
				type="radio"
				label="COM_MYREALPIN_FIELD_SHOW_HEADER_LABEL"
				description="COM_MYREALPIN_FIELD_SHOW_HEADER_DESC"
				class="btn-group btn-group-yesno"
				default="0"
				>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<!--<field 
				name="add_scheme"
				type="radio"
				label="COM_MYREALPIN_FIELD_ADD_LABEL"
				description="COM_MYREALPIN_FIELD_ADD_DESC"
				class="btn-group btn-group-yesno"
				default="1"
				>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>-->

			<field 
				name="frameborder"
				type="radio"
				label="COM_MYREALPIN_FIELD_FRAME_LABEL"
				description="COM_MYREALPIN_FIELD_FRAME_DESC"
				class="btn-group btn-group-yesno"
				default="0"
				>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

		</fieldset>
	</fields>
</metadata>
